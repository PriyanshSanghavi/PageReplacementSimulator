<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PRDetail3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-: Pre-requisite Knowledge :-"
            android:fontFamily="@font/title"
            android:id="@+id/hading"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textSize="28dp"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/hading"
            android:id="@+id/img_vm"
            android:src="@drawable/virtualmemory"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/paging"
            android:layout_below="@+id/hading"
            android:id="@+id/img_paging"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virtual Memory"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:id="@+id/txt_vm"
            android:layout_below="@+id/img_vm"
            android:fontFamily="@font/title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paging    "
            android:id="@+id/txt_paging"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/img_paging"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/title"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/img_pf"
            android:layout_marginTop="30dp"
            android:src="@drawable/pagefault"
            android:layout_below="@+id/txt_vm"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/pagehit"
            android:id="@+id/img_ph"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_paging"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page Fault"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:id="@+id/txt_pf"
            android:layout_below="@+id/img_pf"
            android:fontFamily="@font/title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page Hit  "
            android:id="@+id/txt_ph"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/img_ph"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/title"/>
    </RelativeLayout>
</ScrollView>